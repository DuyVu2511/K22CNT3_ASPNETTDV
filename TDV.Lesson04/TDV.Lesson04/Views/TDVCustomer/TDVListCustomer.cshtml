@model List<TDV.Lesson04.Models.TDVCustomer>
@{
    ViewBag.Title = "Danh sach khach hang";
    //var list = ViewBag.list;
    //var list = Model as List<TDV.Lesson04.Models.TDVCustomer>;
    int stt = 0;
}

<h2>Danh sach khach hang</h2>
<div class="row">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>#</th>
                <th>Ma so</th>
                <th>Ho va ten</th>
                <th>Dia chi</th>
                <th>Nam sinh</th>
                <th>Chuc nang</th>
            </tr>
        </thead>
        <tbody>
            @*@foreach (var item in list)*@
            @foreach (var item in Model)
            {
                stt++;
                <tr>
                    <td>@stt</td>
                    <td>@item.CustomerId</td>
                    <td>@item.FirstName @item.LastName</td>
                    <td>@item.Address</td>
                    <td>@item.YearOfBirth</td>
                    <td>
                        <a href="#">Edit</a>
                        <a href="#">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

