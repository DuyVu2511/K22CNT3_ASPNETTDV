
@{
    ViewBag.Title = "Ngon Ngu Razor";
}

<h2>Ngon Ngu Razor</h2>
<h3>Bien</h3>
@{
    var name = "Tran Duy Vu";
    int age = 20;
    DateTime dt = DateTime.Now;
}
<p>Ho ten:@name</p>
<p>Tuoi:@age</p>
<p>Time:@dt</p>
<hr />
<h3>Cau lenh if</h3>
@{
    if (age > 40)
    {
        <p>Tuoi @age => Gia roi</p>
    }
    else
    {
        <p>Tuoi @age => Con tre</p>
    }
}
<hr />
<h3>Loop: for, while, do...while, foreach....</h3>
@{
    int num = 10;
}
@for (int i = 0; i < num; i++)
{
    <li>@i => @i*@i</li>
}
<h3>Mang</h3>
@{
    string[] names = { "Tran Van A", "Nguyen Thi B", "Le Dai C", "Trinh Le D" };
}
@foreach (var item in names)
{
    <p>@item</p>
}
<hr />
@foreach (var item in ViewBag.names)
{
    <p>@item</p>
}


